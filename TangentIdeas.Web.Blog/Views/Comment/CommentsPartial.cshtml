@model List<MiniBlog.Data.UIModel.CommentUIModel>
<link href="~/Content/Site.css" rel="stylesheet" />
<div class="commentbox">
    <h4 class="comments-title"><strong>Yorumlar</strong> </h4>
    <div class="post-bottom-section">
        <div class="right">
            <div class="navigation">
                <div class="alignleft"></div>
                <div class="alignright"></div>
            </div>
            <ol class="commentlist">
                @{
                    if (Model.Count > 0)
                    {
                        foreach (var item in Model)
                        {
                            <li class="comment even thread-odd thread-alt depth-1">
                                <div class="comment-info">
                                    <img src="~/Images/avatr1.png" width="40" height="40" alt=""> <cite>
                                        @item.Name <br>
                                        <span class="comment-data" style="margin-right:5px; color:#227bad">@item.ParsedCreateDate.ToString("dd MMMM yyyy HH:mm")</span>
                                    </cite>
                                </div>
                                <div class="comment-text">
                                    <p>@item.CommentText</p>
                                </div>
                            </li>
                        }
                    }
                    else
                    {
                        <li class="comments-info">Henüz yorum yok ilk yorum yazan siz olun.</li>
                    }
                }
            </ol>



        </div>
    </div>
</div>



